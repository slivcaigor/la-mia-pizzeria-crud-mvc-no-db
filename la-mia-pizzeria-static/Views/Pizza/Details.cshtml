@{
    Layout = "_Layout";
    ViewData["Title"] = "Product details";
    @model Pizza
}

<div class="min-w-screen py-24 flex items-center overflow-hidden relative">
    <div class="w-full max-w-6xl rounded mx-auto relative md:text-left">
        <div class="md:flex items-center -mx-10">
            <div class="w-full md:w-1/2 px-10 mb-10 md:mb-0">
                <div class="relative">
                    <img src="@Model.Image" class="w-full relative z-10" alt="@Model.Name">
                    <div class="border-4 absolute top-10 bottom-10 left-10 right-10 z-0"></div>
                </div>
            </div>
            <div class="w-full md:w-1/2 px-10">
                <div class="mb-10">
                    <h1 class="font-bold uppercase text-2xl mb-5">@Model.Name</h1>
                    <p class="text-lg">@Model.Description</p>
                </div>
                <div>
                    <div class="inline-block align-bottom mr-5">
                        <span class="font-bold text-5xl leading-none align-baseline">$@Model.Price</span>
                    </div>
                    <div class="inline-block align-bottom flex mt-5 gap-5">

                        <a href="@Url.Action("edit", "pizza", new { id = Model.Id })" class="btn btn-primary hover:opacity-100 rounded-full px-10 py-2 font-bold">Edit</a>

                        <form method="post" action="@Url.Action("Delete", "Pizza", new { id = Model.Id })">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary hover:opacity-100 rounded-full px-10 py-2 font-bold">Delete</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
